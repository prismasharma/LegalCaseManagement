@model LegalCaseManagement.Models.LegalCase

<h2>Delete Legal Case</h2>

<p>Are you sure you want to delete this case?</p>

<div>
    <h4>@Model.CaseTitle</h4>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Case Date:</strong> @Model.CaseDate.ToString("yyyy-MM-dd")</p>
    <p><strong>Status:</strong> @Model.Status</p>
</div>

<form method="post" asp-action="Delete" asp-route-id="@Model.Id">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>