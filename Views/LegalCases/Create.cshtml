@model LegalCaseManagement.Models.LegalCase

<h2>Create Legal Case</h2>

<form method="post" asp-action="Create">
    <div class="form-group">
        <label for="CaseTitle">Case Title</label>
        <input type="text" class="form-control" id="CaseTitle" name="CaseTitle" value="@Model.CaseTitle" required />
    </div>

    <div class="form-group">
        <label for="Description">Description</label>
        <textarea class="form-control" id="Description" name="Description">@Model.Description</textarea>
    </div>

    <div class="form-group">
        <label for="CaseDate">Case Date</label>
        <input type="date" class="form-control" id="CaseDate" name="CaseDate" value="@Model.CaseDate?.ToString("yyyy-MM-dd")" required />
    </div>

    <div class="form-group">
        <label for="Status">Status</label>
        <input type="text" class="form-control" id="Status" name="Status" value="@Model.Status" required />
    </div>

    <button type="submit" class="btn btn-primary">Create Case</button>
</form>

<p>
    <a href="@Url.Action("Index", "LegalCases")">Back to List</a>
</p>
